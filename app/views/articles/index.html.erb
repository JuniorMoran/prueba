<div class="container" >
  <div class="jumbotron">
    <h1>Bienvenidos</h1>      
  </div>      
</div>

<ul class="nav nav-tabs">
  <li role="presentation" class="active" ><a href="#">View list</a></li>
  <li role="presentation" > <%= link_to 'New article', new_article_path %><li>
</ul>

<h3>Lista de Empleados</h3>

<table class="table">
  <thead class="thead-default">
    <tr class="active">
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Edad</th>
      <th>Codigo</th>
      <th>Nacim</th>
      <th>Ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <% @articles.each do |article| %>
  <tbody>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
      <td><%= article.edad %></td>
      <td><%= article.codigo %></td>
      <td><%= article.nacim %></td>
      <td><%= article.ingreso %></td>
      <td><%= link_to 'Show', article_path(article), class:"btn btn-info" %></td>
      <td><%= link_to 'Edit', edit_article_path(article),class:"btn btn-primary" %></td>
      <td><%= link_to 'Destroy', article_path(article),class:"btn btn-danger",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
    
  </tbody>
  <% end %>
</table>


